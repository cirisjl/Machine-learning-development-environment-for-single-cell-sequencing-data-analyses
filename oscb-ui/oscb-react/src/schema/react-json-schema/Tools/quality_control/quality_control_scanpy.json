{
  "type": "object",
  "properties": {
    "parameters": {
      "type":"object",
      "title": "Parameters for Quality Control Process",  
      "properties": {
        "species": { 
          "type": "string",
          "title": "Species Type"
         },
        "idtype": {
           "type": "string",
           "title": "ID Type",
           "description": "Choose the ID Type to specify the gene identifier format for your analysis"
         },
         "cluster_label": {
          "type": "string",
          "title": "Cluster Label",
          "description": "Enter the Cluster Label to identify or categorize your data points within the AnnData object."
        },
        "qc_params": {
          "type": "object",
          "title": "Quality Control Parameters",
          "required": ["methods"],
          "properties": {
            "methods": {
              "type": "array",
              "title": "Method",
              "items": {
                "type": "string",
                "enum": ["Scanpy"]
              },
              "default": ["Scanpy"],
              "uniqueItems": true,
              "minItems": 1
            },
            "assay": {
              "type": "string",
              "title": "Default Assay (If applicable)",
              "default": "RNA"
            },
            "min_genes": {
              "type": "integer",
              "title": "Min Genes",
              "default": 200
            },
            "max_genes": {
              "type": "integer",
              "title": "Max Genes",
              "default": 20000
            },
            "min_cells": {
              "type": "integer",
              "title": "Min Cells",
              "default": 2
            },
            "target_sum": {
              "type": "integer",
              "title": "Target Sum:",
              "default": 10000
            },
            "n_top_genes": {
              "type": "integer",
              "title": "Highly Variable Genes (n_top_genes):",
              "default": 2000
            },
            "n_neighbors": {
              "type": "integer",
              "default": 15
            },
            "n_pcs": {
              "type": "integer",
              "default": 1
            },
            "resolution": {
              "type": "number",
              "title": "Resolution:",
              "default": 0.5
            },
            "doublet_rate": {
              "type": "number",
              "title": "Expected Doublet Rate: ",
              "default": 0.08
            },
            "regress_cell_cycle": {
              "type": "boolean",
              "title": "Regress Cell Cycle",
              "default": false
            },
            "use_default": {
              "type": "boolean",
              "title": "Use Default",
              "default": true,
              "format": "switch"
            }
          }
        }
      }
    }
  }
}