{
  "type": "object",
  "properties": {
    "parameters": {
      "type":"object",
      "title": "Parameters for Imputation Process",  
      "properties": {
        "species": { 
          "type": "string",
          "title": "Species Type"
         },
        "idtype": {
           "type": "string",
           "title": "ID Type",
           "description": "Choose the ID Type to specify the gene identifier format for your analysis"
         },
         "cluster_label": {
          "type": "string",
          "title": "Cluster Label",
          "description": "Enter the Cluster Label to identify or categorize your data points within the AnnData object."
        },
        "imputation_params": {
          "type": "object",
          "title": "Imputation Parameters",
          "required": ["methods"],
          "properties": {
            "methods": {
              "type": "array",
              "title": "Method",
              "items": {
                "type": "string",
                "enum": ["Saver"]
              },
              "default": ["Saver"],
              "uniqueItems": true,
              "minItems": 1
            },
            "assay": {
              "type": "string",
              "title": "Default Assay (If applicable)",
              "default": "RNA"
            },
		        "layer": { 
              "type": "string" ,
              "title": "Layer",
              "description": "Specify the layer",
              "default": ""
            },
            "min_genes": {
              "type": "integer",
              "title": "Min Genes",
              "default": 200
            },
            "max_genes": {
              "type": "integer",
              "title": "Max Genes",
              "default": 20000
            },
            "ncores": {
              "type": "integer",
              "default": 12
            }
          }
        }
      }
    }
  }
}