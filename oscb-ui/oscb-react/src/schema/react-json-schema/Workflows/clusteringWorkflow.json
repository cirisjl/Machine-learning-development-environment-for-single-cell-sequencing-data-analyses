{
  "type": "object",
  "properties": {
    "parameters": {
      "type": "object",
      "title": "Parameters for Clustering Workflow",
      "properties": {
        "output_format": {
          "type": "string",
          "title": "Output Format",
          "description": "Select the output format for storing your results"
        },
        "species": {
          "type": "string",
          "title": "Species Type"
        },
        "idtype": {
          "type": "string",
          "title": "ID Type",
          "description": "Choose the ID Type to specify the gene identifier format for your analysis"
        },
        "cluster_label": {
          "type": "string",
          "title": "Cluster Label",
          "description": "Enter the Cluster Label to identify or categorize your data points within the AnnData object."
        },
        "show_umap": {
          "type": "boolean",
          "title": "Do you want to analyse umap after processing ?",
          "default": true,
          "description": "Toggle this switch to decide whether to perform UMAP (Uniform Manifold Approximation and Projection) analysis after processing your data."
        },
        "show_error": {
          "type": "boolean",
          "title": "Do you want to see the errors of the task execution ?",
          "default": true,
          "description": "Errors during task execution are shown by default, aiding in troubleshooting and refining your analysis. Disable if preferred."
        },
        "qc_params": {
          "type": "object",
          "title": "Quality Control Parameters",
          "required": [
            "methods"
          ],
          "properties": {
            "methods": {
              "type": "array",
              "title": "Method",
              "items": {
                "type": "string",
                "enum": [
                  "Bioconductor",
                  "Seurat",
                  "Scanpy",
                  "Dropkick"
                ]
              },
              "default": [
                "Bioconductor"
              ],
              "uniqueItems": true
            },
            "assay": {
              "type": "string",
              "title": "Default Assay (If applicable)",
              "default": "RNA"
            },
            "layer": {
              "type": "string",
              "title": "Layer",
              "description": "Specify the layer",
              "default": ""
            },
            "min_genes": {
              "type": "integer",
              "title": "Min Genes",
              "default": 200
            },
            "max_genes": {
              "type": "integer",
              "title": "Max Genes",
              "default": 20000
            },
            "min_cells": {
              "type": "integer",
              "title": "Min Cells",
              "default": 2
            },
            "target_sum": {
              "type": "integer",
              "title": "Target Sum:",
              "default": 10000
            },
            "n_top_genes": {
              "type": "integer",
              "title": "Highly Variable Genes (n_top_genes):",
              "default": 2000
            },
            "n_neighbors": {
              "type": "integer",
              "default": 15
            },
            "n_pcs": {
              "type": "integer",
              "default": 1
            },
            "resolution": {
              "type": "number",
              "title": "Resolution:",
              "default": 1
            },
            "doublet_rate": {
              "type": "number",
              "title": "Expected Doublet Rate: ",
              "default": 0
            },
            "regress_cell_cycle": {
              "type": "boolean",
              "title": "Regress Cell Cycle",
              "default": false
            },
            "colour_by": {
              "type": "string",
              "description": "Color By field for BioConductor",
              "title": "Color By",
              "default": ""
            },
            "shape_by_1": {
              "type": "string",
              "description": "Shape By 1 field for BioConductor",
              "title": "Shape By 1",
              "default": ""
            },
            "shape_by_2": {
              "type": "string",
              "description": "Shape By 2 field for BioConductor",
              "title": "Shape By 2",
              "default": ""
            },
            "use_default": {
              "type": "boolean",
              "title": "Use Default",
              "default": true
            }
          }
        },
        "process_type": {
          "type": "string",
          "title": "Process Type",
          "default": "Normalization"
        }
      },
      "required": [
        "process_type"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "process_type": {
                "const": "Normalization"
              }
            }
          },
          "then": {
            "properties": {
              "normalization_params": {
                "type": "object",
                "title": "Normalization Parameters",
                "required": [
                  "methods"
                ],
                "properties": {
                  "methods": {
                    "type": "array",
                    "title": "Method",
                    "items": {
                      "type": "string",
                      "enum": [
                        "DeSeq2",
                        "FPKM",
                        "LogCP10K",
                        "LogCPM",
                        "Pearson_Residuals",
                        "RLE",
                        "scran",
                        "SCT",
                        "SCT_V2",
                        "TMM",
                        "TPM",
                        "UpperQuartile",
                        "UQ"
                      ]
                    },
                    "default": [
                      "DeSeq2"
                    ],
                    "uniqueItems": true
                  },
                  "assay": {
                    "type": "string",
                    "title": "Default Assay (If applicable)",
                    "default": "RNA"
                  },
                  "layer": {
                    "type": "string",
                    "title": "Layer",
                    "description": "Specify the layer",
                    "default": ""
                  },
                  "n_neighbors": {
                    "type": "integer",
                    "default": 15
                  },
                  "n_pcs": {
                    "type": "integer",
                    "default": 1
                  },
                  "resolution": {
                    "type": "number",
                    "title": "Resolution:",
                    "default": 1
                  },
                  "use_default": {
                    "type": "boolean",
                    "title": "Use Default",
                    "default": true
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "process_type": {
                "const": "Imputation"
              }
            }
          },
          "then": {
            "properties": {
              "imputation_params": {
                "type": "object",
                "title": "Imputation Parameters",
                "required": [
                  "methods"
                ],
                "properties": {
                  "methods": {
                    "type": "array",
                    "title": "Method",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Magic",
                        "Saver",
                        "scGNN"
                      ]
                    },
                    "default": [
                      "Magic"
                    ],
                    "uniqueItems": true
                  },
                  "assay": {
                    "type": "string",
                    "title": "Default Assay (If applicable)",
                    "default": "RNA"
                  },
                  "layer": {
                    "type": "string",
                    "title": "Layer",
                    "description": "Specify the layer",
                    "default": ""
                  },
                  "min_genes": {
                    "type": "integer",
                    "title": "Min Genes",
                    "default": 200
                  },
                  "max_genes": {
                    "type": "integer",
                    "title": "Max Genes",
                    "default": 20000
                  },
                  "ncores": {
                    "type": "integer",
                    "default": 12
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}