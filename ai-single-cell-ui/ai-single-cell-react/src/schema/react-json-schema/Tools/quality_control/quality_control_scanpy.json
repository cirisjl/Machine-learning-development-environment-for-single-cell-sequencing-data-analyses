{
  "type": "object",
  "properties": {
    "parameters": {
      "type": "object",
      "title": "Parameters for Quality Control",
      "required": [
          "methods"  ,
          "output_format"
        ],
      "properties": {
        "methods": {
          "type": "array",
          "title": "Method",
          "items": {
            "type": "string",
            "enum": ["Scanpy"]
          },
          "default": ["Scanpy"],
          "uniqueItems": true
        },
        "qualityControl": {
          "type": "object",
          "title": "Quality Control Parameters",
          "description":"Note: An asterisk (*) indicates the default value.",
          "properties": {
            "min_cells": {
              "type": "number",
              "default": 3
            },
            "target_sum": {
              "type": "number",
              "default": 1e4
            },
            "n_top_genes": {
              "type": "integer",
              "default": 2000
            },
            "doublet_rate": {
              "type": "number",
              "default": 0.08
            },
            "regress_cell_cycle": {
              "type": "boolean",
              "default": false
            },
            "use_default": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "projectionParameters": {
          "type": "object",
          "title": "Projection Parameters",
          "description":"Note: An asterisk (*) indicates the default value.",
          "properties": {
            "n_neighbors": {
              "type": "integer",
              "default": 15
            },
            "n_pcs": {
              "type": "integer",
              "default": 10
            }
          }
        },
        "clusteringParameters": {
          "type": "object",
          "title": "Clustering Parameters",
          "description":"Note: An asterisk (*) indicates the default value.",
          "properties": {
            "resolution": {
              "type": "number",
              "default": 1.0
            }
          }
        },
        "output_format": { 
          "type": "string",
          "title": "Output Format",
          "description": "Some more details about the parameter",
          "enum": [".h5ad", ".rds", ".h5Seurat"]
         },
        "default_assay": { 
          "type": "string",
           "default": "RNA",
           "title": "Default Assay",
           "description": "Some more details about the parameter"
           },
        "layer": { 
          "type": "string" ,
          "title": "Layer",
          "description": "Some more details about the parameter"
        },
        "path_of_scrublet_calls": { 
          "type": "string", 
          "default": "./scrublet_calls.tsv",
          "title": "Path of Scrublet Calls",
          "description": "Some more details about the parameter" 
        },
        "species": { 
          "type": "string",
          "title": "Species Type",
          "enum": ["human", "mouse"]
         },
        "idtype": {
           "type": "string",
           "title": "ID Type",
           "description": "Some more details about the parameter"
         },
        "genes": { 
          "type": "array",
          "title": "Genes List",
          "description": "Some more details about the parameter",
           "items": { 
              "type": "string"
            }
        },
        "ncores": { 
          "type": "integer",
          "title": "Cores",
          "description": "Some more details about the parameter",
          "default": 12,
          "minimum": 1,
          "maximum": 12,
          "multipleOf": 1
        },
        "show_umap": {
          "type": "boolean",
          "title": "Do you want to analyse umap after processing ?",
          "default": true,
          "format": "switch",
          "description": "Some description about the umap"
        },
        "show_error": {
          "type": "boolean",
          "title": "Do you want to see the errors of the task execution ?",
          "default": true,
          "format": "switch",
          "description": "Some description about the boolean flag"
        } 
      }
    }
  }
}